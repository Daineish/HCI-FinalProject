<Window x:Name="Medical_Appointment_System" x:Class="CPSC481Project.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CPSC481Project"
        mc:Ignorable="d"
        Title="Medical Appointment System" Height="900" Width="1440"
        MinHeight="812.5"
        MinWidth="1300">
    <Grid x:Name="MainGrid" Margin="0,0,0,0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="345"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="Black"/>
                <GradientStop Color="#FFD0D4D4" Offset="1"/>
                <GradientStop Color="#FF1CECEC"/>
            </LinearGradientBrush>
        </Grid.Background>

        <Rectangle Grid.Column="0" HorizontalAlignment="Left" Height="auto" VerticalAlignment="Stretch" Width="345" Fill="#FFF4F5F5"/>

        <Label Grid.Column="0" x:Name="patientLabel" Content="Patient Search" HorizontalAlignment="Left" VerticalAlignment="Top" Height="47" Width="166" Margin="10,10,0,0" FontSize="24"/>
        <TextBox Grid.Column="0" x:Name="searchField" HorizontalAlignment="Left" Height="34" TextWrapping="Wrap" VerticalAlignment="Top" Width="236" Margin="14,73,0,0" FontSize="18" MouseDoubleClick="searchClicked" Opacity="0.5" TextChanged="searchField_TextChanged"/>
        <TextBlock Grid.Column="0" IsHitTestVisible="False" Text="Search (Healthcare #, Name)" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="24,78.03,0,0" FontSize ="18" Foreground="DarkGray" Height="24" Width="226">
            <TextBlock.Style>
                <Style TargetType="{x:Type TextBlock}">
                    <Setter Property="Visibility" Value="Collapsed"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding Text, ElementName=searchField}" Value="">
                            <Setter Property="Visibility" Value="Visible"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </TextBlock.Style>
        </TextBlock>
        <Image x:Name="searchBtn" Source="/Images/searchButton.png" MouseLeftButtonUp="SearchBtn_Click" HorizontalAlignment="Left" Margin="253.063,69.665,0,0" VerticalAlignment="Top" Width="40.43" RenderTransformOrigin="0.68,1.65" Height="38.608" Cursor="Hand" ToolTip="Search patient"/>
        <Rectangle Grid.Column="0" Fill="#FFF4F4F5" HorizontalAlignment="Left" Height="44" Margin="0,113,0,0" Stroke="Black" VerticalAlignment="Top" Width="354"/>
        <Label Grid.Column="0" x:Name="recentLabel" Content="Recent Patients:" HorizontalAlignment="Left" Margin="10,113,0,0" VerticalAlignment="Top" Height="44" Width="178" FontSize="24"/>
        <Image x:Name="addPatientButton" Source="/Images/addButton.png" MouseLeftButtonUp="addContact" HorizontalAlignment="Left" VerticalAlignment="Top" Width="40.43" Margin="269.07,10,0,0" Height="40.43" RenderTransformOrigin="-1.879,0.207" Cursor="Hand" ToolTip="Add patient"/>
        <Button x:Name="RemoveSearchButton" Content="X" Margin="296.5,118,10,718" Click="OnRemoveSearchButton" FontSize="14" FontWeight="Bold" Cursor="Hand" Visibility="Hidden"/>
        <Grid Grid.Column="1" x:Name="dashboard" Margin="0,0,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="6*"/>
                <RowDefinition Height="20*"/>
                <RowDefinition Height="12*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="0" Grid.Row="0"  Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Top" Width="Auto" Margin="0,-10,0,0">
                <Image x:Name="ToCalendar"  Source="/images/calMonView.png" Height="61" RenderTransformOrigin="0.5,0.5" Margin="25,32,0,18"
                   MouseLeftButtonUp="ToCalendar_MouseLeftButtonUp" HorizontalAlignment="Center" VerticalAlignment="Center" Width="87" Cursor="Hand" ToolTip="Go to monthly view"/>
                <Image x:Name="ToDayView" Source="/images/calDayView.png" Height="61" RenderTransformOrigin="0.5,0.5" Margin="0,32,6,18"
                   MouseLeftButtonUp="ToDayView_MouseLeftButtonUp" HorizontalAlignment="Center" VerticalAlignment="Center" Width="75" Cursor="Hand" ToolTip="Go to daily view"/>
            </StackPanel>
            <Label x:Name="DashDate" Content="December 10th, 2018&#xA; " Margin="200,0,0,0" HorizontalAlignment="Center" Height="63" VerticalAlignment="Top" Width="671" FontSize="48" Grid.Row="0" Grid.ColumnSpan="3"/>
            <Label x:Name="DashTime" Content="" HorizontalAlignment="Center" Height="74" VerticalAlignment="Top" Width="630" FontSize="48" Margin="300,63,0,0" Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="3"/>
            <local:DrWalterTileControl x:Name="DoctorWalterTile" Margin="0,0,0,0" Grid.Row="1" Grid.Column="0"/>
            <local:DrLeeTileControl x:Name="DoctorLeeTile" Margin="0,0,0,0" Grid.Column="1" Grid.Row="1"/>
            <local:DrPayneTileControl x:Name="DoctorPayneTile" Margin="0,0,0,0" Grid.Column="2" Grid.Row="1"/>
            <Image x:Name="clinicLogo" Source="images/clinicLogo.png" Height="138" Margin="150,0,0,0" VerticalAlignment="Center" Grid.Column="2" Grid.Row="0">
                <Image.OpacityMask>
                    <ImageBrush ImageSource="images/clinicLogo.png"/>
                </Image.OpacityMask>
            </Image>
            <ListBox Grid.Column ="0" Grid.ColumnSpan="3" x:Name="walkinQueueList" HorizontalAlignment="Center" Height="177" Margin="0,0,0,20" VerticalAlignment="Bottom" Width="962" Grid.Row="2" ScrollViewer.HorizontalScrollBarVisibility="Visible" ScrollViewer.VerticalScrollBarVisibility="Disabled">
                <ListBox.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel IsItemsHost="True" />
                    </ItemsPanelTemplate>
                </ListBox.ItemsPanel>
                <local:WalkinTile x:Name="wtile1" Height="162.5" Width="177" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                <local:WalkinTile x:Name="wtile2" Height="162.5" Width="177" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                <local:WalkinTile x:Name="wtile3" Height="162.5" Width="177" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                <local:WalkinTile x:Name="wtile4" Height="162.5" Width="177" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                <local:WalkinTile x:Name="wtile5" Height="162.5" Width="177" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </ListBox>
            <Image x:Name="addWalkInButton" Source="/Images/addButton.png" MouseLeftButtonUp="WalkInClicked" HorizontalAlignment="Right" VerticalAlignment="Top" Width="54.927" Margin="0,0,60,0" Height="51.401" Grid.Column="2" Grid.Row="2" Cursor="Hand" ToolTip="Add walk-in appointment"/>
            <Label Grid.Column="0" Content="Walk-In Queue" HorizontalAlignment="Left" Height="60" Margin="62,0,0,0" VerticalAlignment="Top" Width="300" FontSize="36" Grid.Row="2"/>
        </Grid>
        <ScrollViewer Grid.Column="0" x:Name="PatientListScrollViewer" HorizontalAlignment="Stretch" Height="Auto" Margin="0,157,0,0" VerticalAlignment="Top" Width="auto" HorizontalScrollBarVisibility="Hidden" VerticalScrollBarVisibility="Auto">
            <StackPanel x:Name="PatientListStackPanel" Height="Auto" Width="Auto" HorizontalAlignment="Left" VerticalAlignment="Top">
            </StackPanel>
        </ScrollViewer>
        <Grid  Grid.Column="0" x:Name="addPatient" Margin="0,251,1110,0" HorizontalAlignment="Left" VerticalAlignment="Top" Visibility="Hidden">
            <Rectangle Fill="#FFF4F5F5" HorizontalAlignment="Left" Height="619" Stroke="Black" VerticalAlignment="Top" Width="320"/>
            <TextBlock x:Name="apnameLbl" HorizontalAlignment="Left" Height="31" Margin="16,62,0,0" TextWrapping="Wrap" Text="First Name:" VerticalAlignment="Top" Width="102.5" FontSize="18"/>
            <TextBlock x:Name="apnameLbl_Copy" HorizontalAlignment="Left" Height="31" Margin="16,98,0,0" TextWrapping="Wrap" Text="Last Name:" VerticalAlignment="Top" Width="102.5" FontSize="18"/>
            <TextBlock x:Name="apnameLbl_Copy1" HorizontalAlignment="Left" Height="31" Margin="16,134,0,0" TextWrapping="Wrap" Text="Health Care #:" VerticalAlignment="Top" Width="123.5" FontSize="18"/>
            <TextBlock x:Name="apnameLbl_Copy2" HorizontalAlignment="Left" Height="31" Margin="16,170,0,0" TextWrapping="Wrap" Text="Address: " VerticalAlignment="Top" Width="72.5" FontSize="18"/>
            <TextBlock x:Name="apnameLbl_Copy3" HorizontalAlignment="Left" Height="31" Margin="16,206,0,0" TextWrapping="Wrap" Text="Phone:" VerticalAlignment="Top" Width="86.5" FontSize="18"/>
            <TextBlock x:Name="apnameLbl_Copy4" HorizontalAlignment="Left" Height="31" Margin="18,242,0,0" TextWrapping="Wrap" Text="Email:" VerticalAlignment="Top" Width="70.5" FontSize="18"/>
            <TextBlock x:Name="apnameLbl_Copy5" HorizontalAlignment="Left" Height="31" Margin="18,10,0,0" TextWrapping="Wrap" Text="Patient Information:" VerticalAlignment="Top" Width="255.5" FontSize="18"/>
            <TextBlock x:Name="apnameLbl_Copy6" HorizontalAlignment="Left" Height="31" Margin="18,278,0,0" TextWrapping="Wrap" Text="Additional Notes:" VerticalAlignment="Top" Width="149.5" FontSize="18"/>
            <TextBox x:Name="apnameField" HorizontalAlignment="Left" Height="31" Margin="146.833,62,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="160" FontSize="18" GotFocus="ApnameField_GotFocus"/>
            <TextBox x:Name="aplnameField" HorizontalAlignment="Left" Height="31" Margin="146.833,98,-52.833,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="160" FontSize="18" GotFocus="AplnameField_GotFocus"/>
            <TextBox x:Name="aphcField" HorizontalAlignment="Left" Height="31" Margin="146.833,134,-52.833,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="160" FontSize="18" GotFocus="AphcField_GotFocus"/>
            <TextBox x:Name="apaddrField" HorizontalAlignment="Left" Height="31" Margin="146.833,170,-52.833,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="160" FontSize="18" GotFocus="ApaddrField_GotFocus"/>
            <TextBox x:Name="apphoneField" HorizontalAlignment="Left" Height="31" Margin="146.833,206,-52.833,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="160" FontSize="18" GotFocus="ApphoneField_GotFocus"/>
            <TextBox x:Name="apemailField" HorizontalAlignment="Left" Height="31" Margin="146.833,242,-52.833,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="160" FontSize="18" GotFocus="ApemailField_GotFocus"/>
            <TextBox x:Name="apaddField" Height="117.667" Margin="18,314,19.667,0" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="18"/>
            <Button x:Name="confirmBtn" Content="Confirm" HorizontalAlignment="Left" Height="46" Margin="184.833,563,0,0" VerticalAlignment="Top" Width="122" Click="patientaddConfirm" Cursor="Hand"/>
            <Button x:Name="cancelBtn" Content="Cancel" HorizontalAlignment="Left" Height="46" Margin="16,563,0,0" VerticalAlignment="Top" Width="122" Click="cancelClicked" Cursor="Hand"/>
            <Button x:Name="Yes" Content="Yes" HorizontalAlignment="Left" Height="46" Margin="184.833,563,0,0" VerticalAlignment="Top" Width="122" Click="patientConfirmed" Visibility="Hidden" Cursor="Hand"/>
            <TextBlock x:Name="warning" Height="103.666" Margin="16,454.334,21.667,0" TextWrapping="Wrap" Text="Are you sure?" FontSize="24" Foreground="Red" VerticalAlignment="Top" Visibility="Hidden"/>

        </Grid>
        <Grid  Grid.Column="0" x:Name="viewPatient" Margin="0,251,1110,0" Visibility="Hidden">
            <Rectangle Fill="#FFF4F5F5" HorizontalAlignment="Left" Height="798" Stroke="Black" VerticalAlignment="Top" Width="422"/>
            <TextBlock x:Name="apnameLbl1" HorizontalAlignment="Left" Height="31" Margin="16,62,0,0" TextWrapping="Wrap" Text="First Name:" VerticalAlignment="Top" Width="102.5" FontSize="18"/>
            <TextBlock x:Name="apnameLbl_Copy7" HorizontalAlignment="Left" Height="31" Margin="16,98,0,0" TextWrapping="Wrap" Text="Last Name:" VerticalAlignment="Top" Width="102.5" FontSize="18"/>
            <TextBlock x:Name="apnameLbl_Copy8" HorizontalAlignment="Left" Height="31" Margin="16,134,0,0" TextWrapping="Wrap" Text="Health Care #" VerticalAlignment="Top" Width="123.5" FontSize="18"/>
            <TextBlock x:Name="apnameLbl_Copy9" HorizontalAlignment="Left" Height="31" Margin="16,170,0,0" TextWrapping="Wrap" Text="Address: " VerticalAlignment="Top" Width="72.5" FontSize="18"/>
            <TextBlock x:Name="apnameLbl_Copy10" HorizontalAlignment="Left" Height="31" Margin="16,206,0,0" TextWrapping="Wrap" Text="Phone:" VerticalAlignment="Top" Width="86.5" FontSize="18"/>
            <TextBlock x:Name="apnameLbl_Copy11" HorizontalAlignment="Left" Height="31" Margin="18,242,0,0" TextWrapping="Wrap" Text="Email:" VerticalAlignment="Top" Width="70.5" FontSize="18"/>
            <TextBlock x:Name="apnameLbl_Copy12" HorizontalAlignment="Left" Height="31" Margin="18,10,0,0" TextWrapping="Wrap" Text="Patient Information:" VerticalAlignment="Top" Width="255.5" FontSize="18"/>
            <TextBlock x:Name="apnameLbl_Copy13" HorizontalAlignment="Left" Height="31" Margin="18,278,0,0" TextWrapping="Wrap" Text="Additional Notes:" VerticalAlignment="Top" Width="149.5" FontSize="18"/>
            <TextBox x:Name="apaddField1" HorizontalAlignment="Left" Height="226" Margin="18,314,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="378" FontSize="18"/>
            <Button x:Name="confirmBtn1" Content="Confirm" HorizontalAlignment="Left" Height="46" Margin="274,742,0,0" VerticalAlignment="Top" Width="122" Click="patientaddConfirm"/>
            <Button x:Name="cancelBtn1" Content="Cancel" HorizontalAlignment="Left" Height="46" Margin="130,742,0,0" VerticalAlignment="Top" Width="122" Click="cancelClicked"/>
            <Button x:Name="Yes1" Content="Yes" HorizontalAlignment="Left" Height="46" Margin="274,742,0,0" VerticalAlignment="Top" Width="122" Click="patientConfirmed" Visibility="Hidden"/>
            <TextBlock x:Name="warning1" HorizontalAlignment="Left" Height="36" Margin="176.5,683.5,0,0" TextWrapping="Wrap" Text="Are you sure?" VerticalAlignment="Top" Width="205.5" FontSize="24" Foreground="Red" Visibility="Hidden"/>
            <TextBlock x:Name="dPatientname" HorizontalAlignment="Left" Height="31" Margin="163.5,62,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="232.5" FontSize="18"/>
            <TextBlock x:Name="dPatientlname" HorizontalAlignment="Left" Height="31" Margin="163.5,93,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="232.5" FontSize="18"/>
            <TextBlock x:Name="dPatientHC" HorizontalAlignment="Left" Height="31" Margin="163.5,134,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="232.5" FontSize="18"/>
            <TextBlock x:Name="dPatientaddr" HorizontalAlignment="Left" Height="31" Margin="163.5,170,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="232.5" FontSize="18"/>
            <TextBlock x:Name="dPatientpn" HorizontalAlignment="Left" Height="31" Margin="163.5,206,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="232.5" FontSize="18"/>
            <TextBlock x:Name="dPatientemail" HorizontalAlignment="Left" Height="31" Margin="163.5,242,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="232.5" FontSize="18"/>

        </Grid>

    </Grid>
</Window>
